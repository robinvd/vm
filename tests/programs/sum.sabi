fn gt(a,b) {
    return not(leq(a,b))
}

fn lt(a,b) {
    return not(geq(a,b))
}

fn eq(a,b) {
    return and(geq(a,b), leq(a,b))
}

fn solve(arr, target) {
    let start = 0
    let end = 6

    while not (eq(start, end)) {
        let sum = add(arr[start], arr[end])
        if gt(sum, target) {
            end = add(end, -1)
        } else {
            if lt(sum, target) {
                start = add(start, 1)
            } else {
                print(arr[start])
                print("+")
                print(arr[end])
                print("=")
                print(target)
                return True
            }
        }
    }
    print("no answer")
    return False
}

fn main() {
    let arr = [1, 3, 5, 8, 12, 13, 22]
    solve(arr, 16)
}